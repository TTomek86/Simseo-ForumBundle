{
    "name": "simseo/forum-bundle",
    "type": "symfony-bundle",
    "description": "Forum for Symfony, Can be used with SonataAdminBundle",
    "keywords": ["Symfony", "forum", "sonataAdmin"],
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Simon Cosandey",
            "email": "contact@simseo.ch"
        }
    ],
    "require": {
        "php": "^5.3.2",
        "symfony/framework-bundle": "2.8.*",
        "twig/twig": "*",
        "doctrine/doctrine-bundle": "*",
        "knplabs/knp-paginator-bundle": "*",
        "stof/doctrine-extensions-bundle": "*",
        "egeloen/ckeditor-bundle": "*"
    },
    "suggest": {
        "sonata-project/doctrine-orm-admin-bundle": "Admin the forum from the SonataAdmin dasboard",
        "sonata-project/media-bundle": "Image handler for users and Forums"
    },
    "autoload": {
        "psr-0": {"Simseo\\ForumBundle": ""},
        "exclude-from-classmap": [
            "Tests/"
        ]
    },
    "target-dir": "Simseo/ForumBundle",
    "minimum-stability": "dev"
}
